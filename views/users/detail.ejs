<%- include('../../views/partials/navbar') %>

<h1 class="title"><%= user.name %></h1>

<h3>Review history:</h3>


<% if(user.reviews) { %>
    <% user.reviews.forEach(function(a) { %>
      <div class="user-review">
        <h3>
          <a href="/product/<%= a.productId %>" class="review-preview"><%= a.content %></a>
        </h3>
        <form action="/review/<%= a.id %>/?_method=DELETE" method="POST">
            <input type="submit" value="Delete Review" class="delete-btn">
        </form>
      </div>
    <% }) %>
  <% } else { %>
    <h3>No reviews yet!</h3>
  <% } %>

  