<div class="review">
  <h3>Drop a review</h3>
  <form action="/product/<%=product.id%>/review" method="POST" class="review-form">
      <div class="review-div">
          <label for="exampleFormControlInput1" class="review-label">Name</label>
          <input type="text" class="input" id="exampleFormControlInput1" name="name">
      </div>
    <div class="review-div">
      <label for="exampleFormControlInput1" class="review-label">Email address</label>
      <input type="email" name="email" class="input" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>
    <div class="review-div">
      <label for="exampleFormControlTextarea1" class="review-label">What do you think?</label>
      <br/>
    <div class="rate-wrapper">
        <div class="rate">
            <input type="radio" id="star5" name="rate" value="5" />
            <label for="star5" title="text"></label>
            <input type="radio" id="star4" name="rate" value="4" />
            <label for="star4" title="text"></label>
            <input type="radio" id="star3" name="rate" value="3" />
            <label for="star3" title="text"></label>
            <input type="radio" id="star2" name="rate" value="2" />
            <label for="star2" title="text"></label>
            <input type="radio" id="star1" name="rate" value="1" />
            <label for="star1" title="text"></label>
        </div>
    </div>
    <textarea class="review-div textarea" name="content" rows="5"></textarea>
    <div class="review-submit">
        <input type="submit" class="review-btn">
    </div>
  </form>
 </div>
</div>